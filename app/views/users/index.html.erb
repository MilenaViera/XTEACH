<header>
    <div class="logo">
     <img src="https://www.xteach.es/wp-content/uploads/2021/05/xteach_logo_color.png" alt="logo"/>
   </div>
</header>

<div class="container">
<div class="title">
      <h2>Lista de alumnos</h2>
</div>
    <table class="table table-hover">
    <thead>
        <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Email</th>
        <th scope="col">Progreso medio</th>
        <th scope="col">Nota media</th>
        <th scope="col">Graduado</th>
        </tr>
    </thead>
    <tbody>
        
         <% @users.each do |user| %>
         <tr>
            <td><%= user.name %> </td>
            <td><%= user.email %></td>
            <td><%= user.progress_average %></td>
            <td><%= user.grade_point_average %></td>
            <td><%= user.graduate ? 'Graduado' : 'Incompleto'%></td>
        </tr>
        <% end %>
    </tbody>
    </table>
 </div>